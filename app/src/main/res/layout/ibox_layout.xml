<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="260dp">

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/current_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前:"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_selected"
            android:text="ibox1"
            android:textSize="25sp"
            android:layout_below="@+id/current_title"
            />

        <RadioButton
            android:id="@+id/ibox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ibox1"
            android:textSize="22sp"
            android:textColor="@drawable/text_color_selector"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/current_title"
            android:background="@drawable/border_selector"
            android:button="@null"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            />

        <RadioButton
            android:id="@+id/ibox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ibox2"
            android:textSize="22sp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ibox1"
            android:background="@drawable/border_selector"
            android:button="@null"
            android:padding="4dp"
            android:paddingLeft="2dp"
        />

        <RadioButton
            android:id="@+id/ibox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ibox3"
            android:textSize="22sp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ibox2"
            android:background="@drawable/border_selector"
            android:button="@null"
            android:padding="4dp"
            android:paddingLeft="2dp"
            />

        <TextView
            android:id="@+id/more_ibox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  …  "
            android:textSize="28sp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/border_selector"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入设备的名称"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="指标属性"
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/title">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/d1"
                android:text="DI1"
                android:textSize="22sp"
                android:background="@drawable/border_selector"
                android:button="@null"
                android:padding="4dp"
                android:paddingLeft="2dp"
                android:gravity="center"
                />

            <CheckBox
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/d2"
                android:text="DI1"
                android:textSize="22sp"
                android:layout_marginStart="10dp"
                android:background="@drawable/border_selector"
                android:button="@null"
                android:padding="4dp"
                android:paddingLeft="2dp"
                android:gravity="center"
                />

            <CheckBox
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/d3"
                android:text="DI1"
                android:textSize="22sp"
                android:layout_marginStart="10dp"
                android:background="@drawable/border_selector"
                android:button="@null"
                android:padding="4dp"
                android:paddingLeft="2dp"
                android:gravity="center"
                />

            <CheckBox
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/d4"
                android:gravity="center"
                android:text="DI1"
                android:textSize="22sp"
                android:layout_marginStart="10dp"
                android:background="@drawable/border_selector"
                android:button="@null"
                android:padding="4dp"
                android:paddingLeft="2dp"
                />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </HorizontalScrollView>

        <ListView
            android:id="@+id/more_ibox_list"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            android:background="#929292"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>
