<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="260dp">

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/current_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前:"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_ibox"
            android:text="ibox1"
            android:textSize="30sp"
            android:layout_below="@+id/current_title"
            />

        <TextView
            android:id="@+id/ibox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ibox1"
            android:textSize="28sp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/current_title"
            android:background="@drawable/border_selector"
            />

        <TextView
        android:id="@+id/ibox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ibox2"
        android:textSize="28sp"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/ibox1"
        android:background="@drawable/border_selector"
        />

        <TextView
            android:id="@+id/ibox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ibox3"
            android:textSize="28sp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ibox2"
            android:background="@drawable/border_selector"
            />

        <TextView
            android:id="@+id/more_ibox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="…"
            android:textSize="28sp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/border_selector"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入设备的名称"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="指标属性"
            android:textSize="30sp"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d1"
        android:text="DI1"
        android:textSize="40sp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/title"
        android:background="@drawable/border_selector"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d2"
            android:text="DI1"
            android:textSize="40sp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@+id/d1"
            android:background="@drawable/border_selector"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d3"
            android:text="DI1"
            android:textSize="40sp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@+id/d2"
            android:background="@drawable/border_selector"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d4"
            android:text="DI1"
            android:textSize="40sp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@+id/d3"
            android:background="@drawable/border_selector"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </HorizontalScrollView>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>
